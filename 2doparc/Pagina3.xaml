<Window x:Class="_2doparc.Pagina3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2doparc"
        mc:Ignorable="d"
        Title="Pagina3" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="97*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Image HorizontalAlignment="Left" Height="390" Margin="-45,-173,0,0" VerticalAlignment="Top" Width="845" Grid.ColumnSpan="2" Source="/fondo.jpeg" Stretch="Fill"/>
        <TextBox x:Name="tbID" HorizontalAlignment="Left" Margin="468,33,0,0" TextWrapping="Wrap" Text="ID" VerticalAlignment="Top" Width="125" TextChanged="tbID_TextChanged" Height="29" Foreground="#FF3746AE"/>
        <Button x:Name="btMasInfo" Content="Más info" HorizontalAlignment="Left" Margin="627,33,0,0" VerticalAlignment="Top" Width="125" Height="29" Click="btMasInfo_Click" Foreground="#FF9CD4F9" FontWeight="Bold" Background="#FF3746AE"/>
        <DataGrid x:Name="dGDisplay" Margin="41,98,376,70" MinColumnWidth="10" 
          AutoGenerateColumns="True" 
          SelectionChanged="DataGrid_SelectionChanged" Foreground="#FF3746AE">
            <DataGrid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FF9CD4F9" Offset="1"/>
                </LinearGradientBrush>
            </DataGrid.Background>
        </DataGrid>
        <Button x:Name="btRegresar" Content="Regresar" HorizontalAlignment="Left" Margin="41,383,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.005,0.493" Height="30" Width="132" Click="btRegresar_Click" Background="#FF9CD4F9" FontWeight="Bold" Foreground="#FF3746AE"/>
        <Label x:Name="lbTitle" Content="Productos" HorizontalAlignment="Left" Margin="41,13,0,0" VerticalAlignment="Top" FontFamily="Italic Outline Art" FontSize="30" FontWeight="Bold" Height="98" Foreground="White"/>
        <Image HorizontalAlignment="Left" Height="76" Margin="452,111,0,0" VerticalAlignment="Top" Width="157" Source="/logo1.png"/>
        <Label x:Name="lbPostDate" Content="Fecha posteo:" HorizontalAlignment="Left" Margin="627,98,0,0" VerticalAlignment="Top" Width="125" FontWeight="Bold" Foreground="White"/>
        <TextBlock x:Name="txBkDatePost" HorizontalAlignment="Left" Margin="632,129,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="120" Foreground="White" Background="#FF3746AE"/>
        <Label x:Name="lbSellDate" Content="Fecha venta:" HorizontalAlignment="Left" Margin="627,161,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="White"/>
        <TextBlock x:Name="txBkSellDate" HorizontalAlignment="Left" Margin="632,192,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="120" Background="#FF3746AE" Foreground="White"/>
        <Label x:Name="lbPrecioBase" Content="Precio base:" HorizontalAlignment="Left" Margin="627,224,0,0" VerticalAlignment="Top" Width="125" FontWeight="Bold" Foreground="#FF3746AE"/>
        <TextBlock x:Name="txBkPrecioBase" HorizontalAlignment="Left" Margin="632,255,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="120" Background="#FF3746AE" Foreground="White"/>
        <Label x:Name="lbCaducidad" Content="Caducidad:" HorizontalAlignment="Left" Margin="468,224,0,0" VerticalAlignment="Top" Width="125" FontWeight="Bold" Foreground="#FF3746AE"/>
        <TextBlock x:Name="txBkCaducidad" HorizontalAlignment="Left" Margin="473,255,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="16" Width="119" Background="#FF3746AE" Foreground="White"/>
        <Label x:Name="lbCantidad" Content="Cantidad" HorizontalAlignment="Left" Margin="468,295,0,0" VerticalAlignment="Top" Height="26" Width="125" FontWeight="Bold" Foreground="#FF3746AE"/>
        <TextBlock x:Name="txBkCantidad" HorizontalAlignment="Left" Margin="473,326,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="119" Background="#FF3746AE" Foreground="White"/>
        <Label x:Name="lbDescuento" Content="Descuento:" HorizontalAlignment="Left" Margin="627,295,0,0" VerticalAlignment="Top" Width="125" Foreground="#FF3746AE" FontWeight="Bold"/>
        <TextBlock x:Name="txBkDescuento" HorizontalAlignment="Left" Margin="632,326,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="120" Background="#FF3746AE" Foreground="White"/>
        <Label Content="Precio final:" HorizontalAlignment="Left" Margin="468,372,0,0" VerticalAlignment="Top" Width="125" FontWeight="Bold" Foreground="#FF3746AE"/>
        <TextBlock x:Name="txBkPrecioFinal" HorizontalAlignment="Left" Margin="632,377,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="120" Background="#FF3746AE" Foreground="White"/>

    </Grid>
</Window>
