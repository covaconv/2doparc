<Window x:Class="_2doparc.Pagina3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2doparc"
        mc:Ignorable="d"
        Title="Pagina3" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="tbID" HorizontalAlignment="Left" Margin="468,33,0,0" TextWrapping="Wrap" Text="ID" VerticalAlignment="Top" Width="125" TextChanged="tbID_TextChanged" Height="29"/>
        <Button x:Name="btMasInfo" Content="Más info" HorizontalAlignment="Left" Margin="627,33,0,0" VerticalAlignment="Top" Width="125" Height="29" Click="btMasInfo_Click"/>
        <DataGrid x:Name="dGDisplay" Margin="41,98,400,70" MinColumnWidth="10" 
          AutoGenerateColumns="False" 
          SelectionChanged="DataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID Compra" Binding="{Binding idProd}"/>
                <DataGridTextColumn Header="Monto" Binding="{Binding monto}"/>
                <DataGridTextColumn Header="Fecha" Binding="{Binding fecha}"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="btRegresar" Content="Regresar" HorizontalAlignment="Left" Margin="41,383,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.005,0.493" Height="30" Width="132"/>
        <Label Content="Productos" HorizontalAlignment="Left" Margin="41,0,0,0" VerticalAlignment="Top" FontFamily="Italic Outline Art" FontSize="40" FontWeight="Bold" Height="98"/>
        <Image HorizontalAlignment="Left" Height="105" Margin="468,98,0,0" VerticalAlignment="Top" Width="125" Source="/itam.jpg"/>
        <Label x:Name="lbPostDate" Content="Fecha posteo:" HorizontalAlignment="Left" Margin="627,98,0,0" VerticalAlignment="Top" Width="125"/>
        <TextBlock x:Name="txBkDatePost" HorizontalAlignment="Left" Margin="632,129,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lbSellDate" Content="Fecha venta:" HorizontalAlignment="Left" Margin="627,161,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="txBkSellDate" HorizontalAlignment="Left" Margin="632,192,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lbPrecioBase" Content="Precio base:" HorizontalAlignment="Left" Margin="627,224,0,0" VerticalAlignment="Top" Width="125"/>
        <TextBlock x:Name="txBkPrecioBase" HorizontalAlignment="Left" Margin="632,255,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lbCaducidad" Content="Caducidad:" HorizontalAlignment="Left" Margin="468,224,0,0" VerticalAlignment="Top" Width="125"/>
        <TextBlock x:Name="txBkCaducidad" HorizontalAlignment="Left" Margin="473,255,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="16" Width="119"/>
        <Label x:Name="lbCantidad" Content="Cantidad" HorizontalAlignment="Left" Margin="468,295,0,0" VerticalAlignment="Top" Height="26" Width="125"/>
        <TextBlock x:Name="txBkCantidad" HorizontalAlignment="Left" Margin="473,326,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="119"/>
        <Label x:Name="lbDescuento" Content="Descuento:" HorizontalAlignment="Left" Margin="627,295,0,0" VerticalAlignment="Top" Width="125"/>
        <TextBlock x:Name="txBkDescuento" HorizontalAlignment="Left" Margin="632,326,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="120"/>
        <Label Content="Precio final:" HorizontalAlignment="Left" Margin="468,372,0,0" VerticalAlignment="Top" Width="125"/>
        <TextBlock x:Name="txBkPrecioFinal" HorizontalAlignment="Left" Margin="632,377,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
